<%- include('../../partials/header.ejs') %> 
<%- include('../../partials/navbar.ejs') %>

<div class="container">
  <h2>Categorias</h2>
  <hr />

  <a class="btn btn-primary mb-3" href="/admin/categories/new">
    Criar nova categoria
  </a>

  <table class="table table-bordered table-hover table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Título</th>
        <th>Slug</th>
        <th>Ações</th>
      </tr>
    </thead>
    
    <tbody>
      <% categories.forEach((category) => { %>
      <tr>
        <th><%= category.id %></th>
        <th><%= category.title %></th>
        <th><%= category.slug %></th>
        <th>
          <a class="btn btn-warning" href="">Editar</a>

          <form action="/categories/delete" method="post" style="display: inline;" onsubmit="confirmDelete(event, this)">
            <input type="hidden" name="id" value="<%= category.id %>">
            <button class="btn btn-danger">Deletar</button>
          </form>
        </th>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('../../partials/footer.ejs') %>

<script>
  const confirmDelete = (e, form) => {
    e.preventDefault();

    var decision = confirm("Deseja realmente deletar essa categoria?");
    decision ? form.submit() : '';
  }
</script>